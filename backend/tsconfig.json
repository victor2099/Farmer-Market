{
  "compilerOptions": {
    "target": "ES2021",                    
    "module": "commonjs",                 
    "rootDir": "./src",                   
    "outDir": "./dist",                   
    "strict": true,                       
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "types": ["node", "express"],
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
